<IfModule mod_rewrite.c>
  RewriteEngine On
  
  # Redirection to HTTPS (Optional but good practice)
  # RewriteCond %{HTTPS} off
  # RewriteRule (.*) https://%{HTTP_HOST}/$1 [R=301,L]

  # Don't rewrite files or directories
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Rewrite everything else to index.html for Angular SPA
  RewriteRule ^ index.html [L]
</IfModule>

<IfModule mod_headers.c>
  # Disable caching for index.html to ensure app updates are seen immediately
  <FilesMatch "index\.html$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires "0"
  </FilesMatch>

  # Cache other assets (JS, CSS, images) for a long time since they have hashes in filenames
  <FilesMatch "\.(js|css|png|jpg|jpeg|gif|ico|svg)$">
    Header set Cache-Control "max-age=31536000, public"
  </FilesMatch>
  
  # JSON i18n files - Cache for a short time or disable if frequently changing
  <FilesMatch "\.json$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
  </FilesMatch>
</IfModule>
